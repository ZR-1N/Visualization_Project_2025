{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.py",
            "use": "@vercel/python"
        },
        {
            "src": "web/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.py"
        },
        {
            "src": "/(.*)",
            "dest": "/web/$1"
        }
    ]
}